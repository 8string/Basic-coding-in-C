##1 random number generator

#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define ESC 27

int main()

{
    int x;
    char izlaz;
    srand((unsigned)time(NULL));
    do
    {
        printf("Press a key: ");
        izlaz=_getch();
        x=rand()%6+1;
        printf("\nThe random number is %d\n",x);
    }while(izlaz!=ESC);
    return 0;
}


##2 adding string

#include<stdio.h>
#include<string.h>

int main()
{
    char ime[31], grad[36]="Grad ";

    printf("Unesite ime grada: ");
    fgets(ime,30,stdin);

    strcat(grad,ime);

    printf("\n%s",grad);

    return 0;
}


##3 simple plus function

#include<stdio.h>

int main()
{
    int a,b,c;

    printf("Enter the first number: ");
    scanf("%d",&a);

    printf("\nEnter the second number ");
    scanf("%d",&b);

    c=a+b;

    printf("\nThe sum is %d",c);

     return 0;
}


## void work
#include<stdio.h>
#define MAX 50

void funkcija(int polje[],int*neg,int*poz,int*nula)
{
    int i;
    *poz=0;
    *neg=0;
    *nula=0;
    for(i=0;i<MAX;i++)
    {
        if(polje[i]<0)
        {
            *neg=*neg+1;
        }
        if(polje[i]>0)
        {
            *poz=*poz+1;
        }
        else if(polje[i]==0)
        {
            *nula=*nula+1;
        }
    }
}
int main()
{
    int i,polje[MAX],neg,poz,nula;
    int*pokNeg=&neg;
    int*pokPoz=&poz;
    int*pokNula=&nula;
    srand((unsigned)time(NULL));
    printf("Generirano polje:\n");
    for(i=0;i<MAX;i++)
    {
        polje[i]=(rand()%100-50);
        printf("\n%d",polje[i]);
    }
    funkcija(polje,pokNeg,pokPoz,pokNula);
    printf("\nNegativnih brojeva ima: %d",neg);
    printf("\nPozitivnih brojeva ima: %d",poz);
    printf("\nNula ima: %d",nula);
}


