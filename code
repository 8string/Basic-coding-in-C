##random number generator

#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define ESC 27

int main()

{
    int x;
    char izlaz;
    srand((unsigned)time(NULL));
    do
    {
        printf("Press a key: ");
        izlaz=_getch();
        x=rand()%6+1;
        printf("\nThe random number is %d\n",x);
    }while(izlaz!=ESC);
    return 0;
}
